  <script>
    const bgAudio = document.getElementById('bgAudio');
    const playBtn = document.getElementById('playMusic');
    playBtn.addEventListener('click', ()=>{
      if(bgAudio.paused){bgAudio.play().catch(()=>alert('Tarayıcı engelliyor olabilir, lütfen manuel çal.'));playBtn.textContent='Müziği Durdur ⏸';}
      else {bgAudio.pause();playBtn.textContent='Müziği Çal ▶';}
